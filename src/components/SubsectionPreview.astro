---
import { getCollection } from 'astro:content';

interface Props {
  directory: string;
}

const { directory } = Astro.props;

// Fetch all docs and filter by the specified directory
const allDocs = await getCollection('docs');
const pages = allDocs
  .filter(page => {
    // Ensure it's in the right directory and NOT the index page itself
    return page.id.startsWith(directory + '/') && !page.id.endsWith('index.mdx');
  })
  .sort((a, b) => {
    const dateA = a.data.publishDate ? new Date(a.data.publishDate) : new Date(0);
    const dateB = b.data.publishDate ? new Date(b.data.publishDate) : new Date(0);
    
    // Sort by date descending (newest first)
    if (dateA.getTime() !== dateB.getTime()) {
      return dateB.getTime() - dateA.getTime();
    }
    // Fallback to title sorting if dates are equal or missing
    return a.data.title.localeCompare(b.data.title);
  });

// Base path from astro.config.mjs or env
const base = import.meta.env.BASE_URL || '/website';
const cleanBase = base.endsWith('/') ? base.slice(0, -1) : base;

// Helper to extract YouTube ID from MDX body
function getYouTubeId(body) {
  if (!body) return null;
  const match = body.match(/<YouTube\s+id=["']([^"']+)["']/);
  return match ? match[1] : null;
}

// Helper to format date
function formatDate(dateStr) {
  if (!dateStr) return null;
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  });
}
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-16 my-16 px-4">
  {pages.map((page, index) => {
    const slug = page.id.replace(/\.mdx?$/, '');
    const href = `${cleanBase}/${slug}/`;
    const youtubeId = getYouTubeId(page.body);
    const thumbnailUrl = youtubeId ? `https://i.ytimg.com/vi/${youtubeId}/maxresdefault.jpg` : null;
    const formattedDate = formatDate(page.data.publishDate);
    const isEven = index % 2 === 0;
    
    return (
      <a 
        href={href}
        class="no-underline group relative block h-full"
      >
        <div class={`h-full overflow-hidden transition-all duration-300 rounded-3xl border-4 ${isEven ? 'border-violet-400 dark:border-violet-600' : 'border-indigo-400 dark:border-indigo-600'} ${isEven ? 'bg-violet-50 dark:bg-violet-950/30' : 'bg-indigo-50 dark:bg-indigo-950/30'} shadow-[0_8px_30px_rgb(0,0,0,0.12)] dark:shadow-[0_8px_30px_rgb(0,0,0,0.5)] hover:shadow-[0_20px_60px_rgba(139,92,246,0.3)] dark:hover:shadow-[0_20px_60px_rgba(139,92,246,0.4)] hover:-translate-y-2 hover:scale-[1.02] flex flex-col`}>
          
          {thumbnailUrl ? (
            <div class={`relative aspect-video overflow-hidden border-b-4 ${isEven ? 'border-violet-400 dark:border-violet-600' : 'border-indigo-400 dark:border-indigo-600'}`}>
              <img 
                src={thumbnailUrl} 
                alt={page.data.title}
                class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-110"
                onerror="this.src='https://i.ytimg.com/vi/' + this.src.split('/').pop().replace('maxresdefault.jpg', 'hqdefault.jpg')"
              />
              <div class="absolute top-4 right-4 px-4 py-2 bg-violet-600 text-white text-sm font-bold rounded-xl uppercase tracking-wider shadow-2xl">
                Video
              </div>
            </div>
          ) : (
            <div class={`relative h-48 bg-gradient-to-br ${isEven ? 'from-violet-200/30 to-violet-400/20 dark:from-violet-900/20 dark:to-violet-700/10' : 'from-indigo-200/30 to-indigo-400/20 dark:from-indigo-900/20 dark:to-indigo-700/10'} flex items-center justify-center border-b-4 ${isEven ? 'border-violet-400 dark:border-violet-600' : 'border-indigo-400 dark:border-indigo-600'}`}>
               <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-violet-500 dark:text-violet-400 opacity-50">
                  <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
               <div class="absolute top-4 right-4 px-4 py-2 bg-slate-800 text-white text-sm font-bold rounded-xl uppercase tracking-wider shadow-2xl">
                Article
              </div>
            </div>
          )}

          <div class="p-8 md:p-10 flex flex-col flex-grow">
            <div class={`flex items-center gap-3 mb-6 pb-4 border-b-2 ${isEven ? 'border-violet-300 dark:border-violet-700' : 'border-indigo-300 dark:border-indigo-700'}`}>
              {formattedDate && (
                <span class="text-sm font-bold text-violet-700 dark:text-violet-300 uppercase tracking-widest bg-violet-100 dark:bg-violet-900/50 px-3 py-1 rounded-full">
                  {formattedDate}
                </span>
              )}
            </div>
            
            <h3 class="text-xl md:text-2xl font-bold text-slate-900 dark:text-white mb-4 group-hover:text-violet-600 dark:group-hover:text-violet-400 transition-colors duration-300 leading-tight">
              {page.data.title}
            </h3>
            {page.data.description && (
              <p class="text-slate-700 dark:text-slate-300 text-base leading-relaxed line-clamp-3">
                {page.data.description}
              </p>
            )}
          </div>
        </div>
      </a>
    );
  })}
</div>

<style>
  .no-underline {
    text-decoration: none !important;
  }
</style>






