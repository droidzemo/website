---
import { getCollection } from 'astro:content';

interface Props {
  directory: string;
}

const { directory } = Astro.props;

// Fetch all docs and filter by the specified directory
const allDocs = await getCollection('docs');
const pages = allDocs
  .filter(page => {
    // Ensure it's in the right directory and NOT the index page itself
    return page.id.startsWith(directory + '/') && !page.id.endsWith('index.mdx');
  })
  .sort((a, b) => {
    const dateA = a.data.publishDate ? new Date(a.data.publishDate) : new Date(0);
    const dateB = b.data.publishDate ? new Date(b.data.publishDate) : new Date(0);
    
    // Sort by date descending (newest first)
    if (dateA.getTime() !== dateB.getTime()) {
      return dateB.getTime() - dateA.getTime();
    }
    // Fallback to title sorting if dates are equal or missing
    return a.data.title.localeCompare(b.data.title);
  });

// Base path from astro.config.mjs or env
const base = import.meta.env.BASE_URL || '/website';
const cleanBase = base.endsWith('/') ? base.slice(0, -1) : base;

// Helper to extract YouTube ID from MDX body
function getYouTubeId(body) {
  if (!body) return null;
  const match = body.match(/<YouTube\s+id=["']([^"']+)["']/);
  return match ? match[1] : null;
}

// Helper to format date
function formatDate(dateStr) {
  if (!dateStr) return null;
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  });
}
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 my-12">
  {pages.map((page, index) => {
    const slug = page.id.replace(/\.mdx?$/, '');
    const href = `${cleanBase}/${slug}/`;
    const youtubeId = getYouTubeId(page.body);
    const thumbnailUrl = youtubeId ? `https://i.ytimg.com/vi/${youtubeId}/maxresdefault.jpg` : null;
    const formattedDate = formatDate(page.data.publishDate);
    
    return (
      <>
        {index > 0 && (
          <div class="col-span-full">
            <div class="relative flex items-center justify-center my-4">
              <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t-2 border-slate-200 dark:border-slate-700"></div>
              </div>
              <div class="relative px-4 bg-white dark:bg-slate-950">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-slate-300 dark:text-slate-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </div>
            </div>
          </div>
        )}
        
        <a 
          href={href}
          class="no-underline group relative block h-full"
        >
          <div class="h-full overflow-hidden transition-all duration-300 rounded-2xl border-2 border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-900 shadow-2xl shadow-slate-300/30 dark:shadow-black/40 hover:border-violet-500 hover:shadow-violet-500/20 dark:hover:shadow-violet-500/20 hover:-translate-y-1 flex flex-col">
            
            {thumbnailUrl ? (
              <div class="relative aspect-video overflow-hidden border-b-2 border-slate-300 dark:border-slate-700">
                <img 
                  src={thumbnailUrl} 
                  alt={page.data.title}
                  class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-105"
                  onerror="this.src='https://i.ytimg.com/vi/' + this.src.split('/').pop().replace('maxresdefault.jpg', 'hqdefault.jpg')"
                />
                <div class="absolute top-4 right-4 px-3 py-1.5 bg-violet-600 text-white text-xs font-bold rounded-lg uppercase tracking-wider shadow-lg">
                  Video
                </div>
              </div>
            ) : (
              <div class="relative h-40 bg-gradient-to-br from-violet-600/10 via-indigo-600/5 to-transparent flex items-center justify-center border-b-2 border-slate-300 dark:border-slate-700">
                 <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-violet-500 opacity-40">
                    <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                 <div class="absolute top-4 right-4 px-3 py-1.5 bg-slate-800 text-white text-xs font-bold rounded-lg uppercase tracking-wider">
                  Article
                </div>
              </div>
            )}

            <div class="p-6 md:p-8 flex flex-col flex-grow">
              <div class="flex items-center gap-2 mb-4 pb-3 border-b border-slate-200 dark:border-slate-700">
                {formattedDate && (
                  <span class="text-xs font-bold text-violet-600 dark:text-violet-400 uppercase tracking-widest">
                    {formattedDate}
                  </span>
                )}
                <div class="h-px flex-grow bg-slate-200 dark:bg-slate-700"></div>
              </div>
              
              <h3 class="text-lg md:text-xl font-bold text-slate-900 dark:text-white mb-3 group-hover:text-violet-500 transition-colors duration-300 leading-snug">
                {page.data.title}
              </h3>
              {page.data.description && (
                <p class="text-slate-600 dark:text-slate-400 text-sm leading-relaxed line-clamp-3">
                  {page.data.description}
                </p>
              )}
            </div>
          </div>
        </a>
      </>
    );
  })}
</div>

<style>
  .no-underline {
    text-decoration: none !important;
  }
</style>




