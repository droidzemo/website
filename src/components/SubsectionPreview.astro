---
import { getCollection } from 'astro:content';

interface Props {
  directory: string;
}

const { directory } = Astro.props;

// Fetch all docs and filter by the specified directory
const allDocs = await getCollection('docs');
const pages = allDocs
  .filter(page => {
    // Ensure it's in the right directory and NOT the index page itself
    return page.id.startsWith(directory + '/') && !page.id.endsWith('index.mdx');
  })
  .sort((a, b) => {
    return a.data.title.localeCompare(b.data.title);
  });

// Base path from astro.config.mjs or env
const base = import.meta.env.BASE_URL || '/website';
const cleanBase = base.endsWith('/') ? base.slice(0, -1) : base;

// Helper to extract YouTube ID from MDX body
function getYouTubeId(body) {
  if (!body) return null;
  const match = body.match(/<YouTube\s+id=["']([^"']+)["']/);
  return match ? match[1] : null;
}
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 my-12">
  {pages.map((page) => {
    const slug = page.id.replace(/\.mdx?$/, '');
    const href = `${cleanBase}/${slug}/`;
    const youtubeId = getYouTubeId(page.body);
    const thumbnailUrl = youtubeId ? `https://i.ytimg.com/vi/${youtubeId}/maxresdefault.jpg` : null;
    
    return (
      <a 
        href={href}
        class="no-underline group relative block h-full"
      >
        <div class="h-full overflow-hidden transition-all duration-500 rounded-2xl border border-slate-200/50 dark:border-white/10 bg-white/40 dark:bg-slate-900/40 backdrop-blur-md hover:border-violet-500/50 hover:shadow-[0_20px_50px_rgba(139,92,246,0.15)] dark:hover:shadow-[0_20px_50px_rgba(139,92,246,0.2)] flex flex-col group-hover:-translate-y-2">
          
          {thumbnailUrl ? (
            <div class="relative aspect-video overflow-hidden">
              <img 
                src={thumbnailUrl} 
                alt={page.data.title}
                class="object-cover w-full h-full transition-transform duration-700 group-hover:scale-110"
                onerror="this.src='https://i.ytimg.com/vi/' + this.src.split('/').pop().replace('maxresdefault.jpg', 'hqdefault.jpg')"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex items-center justify-center">
                <div class="w-12 h-12 rounded-full bg-violet-600 flex items-center justify-center shadow-lg shadow-violet-600/40 transform scale-0 group-hover:scale-100 transition-transform duration-500 delay-100">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
              </div>
              <div class="absolute top-3 right-3 px-2 py-1 bg-violet-600/90 backdrop-blur-sm text-white text-[10px] font-bold rounded uppercase tracking-wider">
                Video
              </div>
            </div>
          ) : (
            <div class="relative h-32 bg-gradient-to-br from-violet-600/20 to-indigo-600/20 flex items-center justify-center">
              <div class="p-4 rounded-xl bg-white/10 backdrop-blur-sm border border-white/20">
                 <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-violet-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
               <div class="absolute top-3 right-3 px-2 py-1 bg-slate-800/80 backdrop-blur-sm text-white text-[10px] font-bold rounded uppercase tracking-wider">
                Article
              </div>
            </div>
          )}

          <div class="p-6 flex flex-col flex-grow">
            <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-3 group-hover:text-violet-500 transition-colors duration-300 leading-tight">
              {page.data.title}
            </h3>
            {page.data.description && (
              <p class="text-slate-600 dark:text-slate-400 text-sm line-clamp-2 mb-6 flex-grow leading-relaxed">
                {page.data.description}
              </p>
            )}
            <div class="flex items-center text-violet-500 font-bold text-xs uppercase tracking-widest mt-auto">
              <span>View Details</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2 transition-all duration-300 transform group-hover:translate-x-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </div>
          </div>
        </div>
      </a>
    );
  })}
</div>

<style>
  .no-underline {
    text-decoration: none !important;
  }
</style>

