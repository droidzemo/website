---
import { getCollection } from 'astro:content';

interface Props {
  directory: string;
}

const { directory } = Astro.props;

// Fetch all docs and filter by the specified directory
const allDocs = await getCollection('docs');
const pages = allDocs
  .filter(page => {
    // Ensure it's in the right directory and NOT the index page itself
    return page.id.startsWith(directory + '/') && !page.id.endsWith('index.mdx');
  })
  .sort((a, b) => {
    return a.data.title.localeCompare(b.data.title);
  });

// Base path from astro.config.mjs or env
const base = import.meta.env.BASE_URL || '/website';
const cleanBase = base.endsWith('/') ? base.slice(0, -1) : base;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 my-8">
  {pages.map((page) => {
    // Starlight slugs don't include the base path and usually don't have leading slashes
    const slug = page.id.replace(/\.mdx?$/, '');
    const href = `${cleanBase}/${slug}/`;
    
    return (
      <a 
        href={href}
        class="no-underline group"
      >
        <div class="h-full border border-slate-200 dark:border-slate-800 rounded-xl p-6 transition-all duration-300 hover:border-violet-500 hover:shadow-lg hover:shadow-violet-500/10 bg-white dark:bg-slate-900 flex flex-col">
          <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2 group-hover:text-violet-500 transition-colors">
            {page.data.title}
          </h3>
          {page.data.description && (
            <p class="text-slate-600 dark:text-slate-400 text-sm line-clamp-3 mb-4 flex-grow">
              {page.data.description}
            </p>
          )}
          <div class="flex items-center text-violet-500 font-semibold text-sm">
            Read More
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </div>
      </a>
    );
  })}
</div>


<style>
  .no-underline {
    text-decoration: none !important;
  }
</style>
